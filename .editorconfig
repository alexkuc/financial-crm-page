root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
indent_size = 2
quote_type = double

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*{.js,.jsx}]
indent_size = 2
quote_type = single

[*.php]
indent_size = 2
quote_type = single

[*.html]
indent_size = 2
quote_type = double
